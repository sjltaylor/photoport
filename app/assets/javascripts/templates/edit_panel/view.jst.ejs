<div class="edit-panel">
  <button type="button" class="close fui-cross"></button>
  <div class="controls">
    <div class="control add">
      <p>Add a photo before or after this one</p>
      <button class="btn btn-small btn-success btn-block add-before">before</button>
      <button class="btn btn-small btn-success btn-block add-after">after</button>
    </div>
    <div class="control remove">
      <p>Remove this photo to be deleted or repositioned</p>
      <button class="btn btn-small btn-warning btn-block remove">remove</button>
    </div>
  </div>
</div>